// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // SMS-man related fields
  smsManToken String?
  balance     Float   @default(0)

  // Relations
  smsRequests SmsRequest[]

  @@map("users")
}

model SmsRequest {
  id          String      @id @default(cuid())
  userId      String
  requestId   String      @unique // SMS-man request ID
  countryId   String
  serviceId   String
  phoneNumber String?
  status      SmsStatus   @default(PENDING)
  maxPrice    Float?
  currency    String      @default("USD")
  smsCode     String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  expiresAt   DateTime?

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sms_requests")
}

enum SmsStatus {
  PENDING
  READY
  CLOSE
  REJECT
  USED
  EXPIRED
}